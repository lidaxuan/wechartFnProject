    <view class='bindingB_o'>
      <input class='bindingB_o_tel' name="bindCode" placeholder="请输入您的店员绑定码"></input>
    </view>
  </view>
  <button class='f_btn' formType="submit">立即绑定</button>
  </form>
  <view style='color:#c1c1c1;'>店员绑定码请联系管理员索要</view>
</view>