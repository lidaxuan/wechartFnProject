<view class="container">
  <view style='width:100%;height:30rpx;background:#f2f2f2;'></view>
  <form bindsubmit="formSubmit">
  <view class='bindingB'>
    <view class='bindingB_o'>
      <view class='bindingB_o_sel'>
        +86
        <image src="../../img/select.png" style='width:19rpx;height:12rpx;margin-left:50rpx;'></image>
      </view>
      <view>
        <input class='bindingB_o_tel' name="phone" placeholder="请输入您的手机号码" bindinput='getPhoneValue' value=""></input>
